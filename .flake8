[flake8]
# Maximum line length (compatible with black)
max-line-length = 88

# Ignore codes that conflict with black or are handled by other tools
# E203: whitespace before ':' (conflicts with black)
# E501: line too long (handled by black)
# W503: line break before binary operator (conflicts with black)
# W504: line break after binary operator (conflicts with black)
extend-ignore = E203,E501,W503,W504

# Exclude directories and files
exclude =
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    htmlcov,
    .pytest_cache,
    .mypy_cache,
    .tox,
    .coverage,
    *.egg-info

# Per-file ignores
# __init__.py:F401 - imported but unused (common in __init__.py)
# tests/*:S101 - use of assert (normal in tests)
per-file-ignores =
    __init__.py:F401,
    tests/*:S101

# Code complexity
max-complexity = 15

# Docstring convention
docstring-convention = google

# Show statistics and count
statistics = True
count = True

# Show source code for each error
show-source = True

# Show pep8 violation in full detail
verbose = 1
